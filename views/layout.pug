doctype html
html
  head
    title= title?title:"Facebook Clone"
    link(rel='stylesheet', href='/stylesheets/tailwind-styled.css')
    meta(name="viewport" content="width=500, initial-scale=1")
  body(class='min-h-screen')
    include ./components/header 
    if user 
      block content
    else 
      div(class='grid grid-cols-1 grid-rows-2 gap-y-2 min-h-2 mt-5')
        a(href="/login/facebook" class='justify-self-center') 
          button(class='bg-blue-600 hover:bg-blue-800 p-3 text-white font-bold rounded-md w-52') Log In With Facebook
        a(href="/login/guest" class='justify-self-center') 
          button(class='bg-gray-500  hover:bg-gray-700 p-3 text-white font-bold rounded-md w-52') Log In As Guest
